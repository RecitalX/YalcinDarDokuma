@model Kurumsal.Models.Banner

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<<script type="text/javascript">CKEDITOR.replace('editor')</script>

<div class="container">

@using (Html.BeginForm("Edit", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Banner</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="control-label col-md-2 mb-3">
                Anasayfa 
            </div>
            <div class="col-md-10">
                <textarea name="Banner1" class="ckeditor">@Model.Banner1</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL1" accept=".png,.jpg,.jpeg" />
                @Html.ValidationMessageFor(model => model.ResimURL1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 mb-3">
                Anasayfa
            </div>
            <div class="col-md-10">
                <textarea name="Banner2" class="ckeditor">@Model.Banner2</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL2" accept=".png,.jpg,.jpeg" />
                @Html.ValidationMessageFor(model => model.ResimURL2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 mb-3">
                Anasayfa
            </div>
            <div class="col-md-10">
                <textarea name="Banner3" class="ckeditor">@Model.Banner3</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL3" accept=".png,.jpg,.jpeg" />
                @Html.ValidationMessageFor(model => model.ResimURL3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Güncelle</button>
                <a class="text-white btn btn-danger" href="/Kimlik/Index">İptal</a>
            </div>
        </div>
    </div>
}
</div>
