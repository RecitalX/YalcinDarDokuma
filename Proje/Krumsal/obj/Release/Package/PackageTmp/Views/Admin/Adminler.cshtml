@model IEnumerable<Kurumsal.Models.Admin>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary d-inline">Admin Listesi</h6>&nbsp;&nbsp;
            <h5 class="font-weight-bold text-primary d-inline">
                @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="myTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            Eposta
                        </th>
                        <th>
                            Şifre
                        </th>
                        <th>
                            Yetki
                        </th>
                        <th width="137">Ayarlar</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Eposta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sifre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Yetki)
                            </td>
                            <td>
                                @Html.ActionLink("Güncelle", "Edit", new { id = item.AdminId }, new { @class = " btn btn-primary btn-sm" }) 
                                @Html.ActionLink("Sil", "Delete", new { id = item.AdminId }, new { @class = " btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
