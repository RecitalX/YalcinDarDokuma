@model Kurumsal.Models.Admin
@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sifremi Unuttum - Admin</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/Admin Panel/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    @Styles.Render("~/css/login")

    @Scripts.Render("~/script/login")

</head>

<body class="bg-gradient-primary" style="margin-top:10%;">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">
                                            Parolanızı mı unuttunuz?
                                        </h1>
                                        <p class="mb-4">
                                            Anlıyoruz, bir şeyler oluyor. Size şifrenizi sıfırlamanız için bir link gönderelim!
                                        </p>

                                        @if (ViewBag.Uyari == null)
                                        {

                                        }
                                        else
                                        {
                                            <div class="alert alert-info" id="divMessage">@ViewBag.Uyari</div>
                                        }

                                    </div>
                                    <form class="user" action="/Admin/SifremiUnuttum/" method="post">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" name="eposta" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Mail adresinizi giriniz...">
                                        </div>
                                        <div class="text-center">
                                            <input type="submit" value="Şifremi Gönder" class="btn btn-primary w-100" />

                                        </div>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="" href="/yonetimpaneli">Giriş Yap!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    @Scripts.Render("~/script/login2")

</body>
</html>
