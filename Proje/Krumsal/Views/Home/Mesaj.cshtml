@model IEnumerable<Kurumsal.Models.Sınıflar.Mesaj>
@{ ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<section class="contact-sec" style="background-color:black;">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6" data-ng-controller="ContactUsFrontEndController">
                <h1 class="page-title" style="color:white">Mesaj At!</h1>

                @if (TempData["Başarısız"] != null)
                {
    <div class="alert alert-danger text-center" style="">
        @TempData["Başarısız"]
    </div>}
                @if (TempData["Basarılı"] != null)
                {
    <div class="alert text-center" style="width: 100%;background-color: rgb(70, 167, 51);color: white">
        @TempData["Basarılı"]
    </div>}

                <form action="/Home/Mesaj/" method="POST" class="contact-form">

                    @Html.AntiForgeryToken()

                    <div class="alert in alert-{{ messageType }} " data-ng-show="message" data-ng-cloak>
                        <i class="fa-fw fa fa-check"></i>
                        <span data-ng-bind="message"></span>
                    </div>
                    <div class="form-group" data-ng-class="errors.fullName ? 'has-error' : ''">
                        <div class="form-label">
                            <input type="text" id="AdSoyad" name="AdSoyad" class="form-control" data-ng-model="entity.fullName" maxlength="100">
                            <label for="FullName">Ad Soyad</label>
                        </div>
                        <small class="help-block" data-ng-show="errors.fullName" data-ng-bind="errors.fullName"></small>
                    </div>

                    <div class="form-group" data-ng-class="errors.companyName ? 'has-error' : ''">
                        <div class="form-label">
                            <input type="text" id="Konu" name="Konu" class="form-control" data-ng-model="entity.companyName">
                            <label for="CompanyName">Konu</label>
                        </div>
                        <small class="help-block" data-ng-show="errors.companyName" data-ng-bind="errors.companyName"></small>
                    </div>

                    <div class="form-group" data-ng-class="errors.email ? 'has-error' : ''">
                        <div class="form-label">
                            <input type="text" id="Telefon" name="Telefon" class="form-control" data-ng-model="entity.email" maxlength="256">
                            <label for="EmailAddress">Telefon</label>
                        </div>
                        <small class="help-block " data-ng-show="errors.email" data-ng-bind="errors.email"></small>
                    </div>

                    <div class="form-group" data-ng-class="errors.message ? 'has-error' : ''">
                        <div class="form-label">
                            <textarea id="İleti" name="İleti" class="form-control" rows="8" data-ng-model="entity.message" maxlength="4000"></textarea>
                            <label for="Message">Mesaj</label>
                        </div>
                        <small class="help-block" data-ng-show="errors.message" data-ng-bind="errors.message"></small>
                    </div>

                    <button type="submit" class="send-button">
                        Gönder
                    </button>
                </form>
            </div>

            <div class="col-lg-1 col-md-1 col-sm-1"></div>

            @{ Html.RenderAction("Iletisim", "Home"); }

        </div>


        <div class="" style="">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d30564.86858147344!2d28.893500834446066!3d41.012058512343785!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabb190d58ba91%3A0x443f2092c454ac6b!2zWWFsw6fEsW4gRGFyIERva3VtYQ!5e0!3m2!1str!2str!4v1599410890259!5m2!1str!2str" width="100%" height="500" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </div>
</section>