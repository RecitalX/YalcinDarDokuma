@model IEnumerable<Kurumsal.Models.Sınıflar.KatalogKategori>

@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="container-fluid">

    <div class="text-center">
        @if (TempData["DeleteMessage1"] != null)
        {
<h5 class="alert alert-danger"> @TempData["DeleteMessage1"]</h5>}
        @{ if (TempData["create"] != null)
            {
<h5 class="alert alert-success"><i class="far fa-check-circle"></i>&nbsp;&nbsp; @TempData["create"]</h5> }
if (TempData["edit"] != null)
{
<h5 class="alert alert-primary"><i class="far fa-edit"></i>&nbsp;&nbsp; @TempData["edit"]</h5> } @*if (TempData["delete"] != null)
    {
        <h5 class="alert alert-danger"><i class="far fa-trash-alt"></i>&nbsp;&nbsp; @TempData["delete"]</h5> }*@ }
    </div>

    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary d-inline">Kategori Listesi</h6>&nbsp;&nbsp;
            <h5 class="font-weight-bold text-primary d-inline">
                @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th>
                            Resim
                        </th>
                        <th></th>
                    </tr>

                  @foreach (var item in Model)
                  {

                <tr>
                    <td>
                        @{ string kategoriadi = "";
                            if (item.Baslik.Length > 100)
                            {
                                kategoriadi = item.Baslik.Substring(0, 100) + "...";
                            }
                            else
                            {
                                kategoriadi = @item.Baslik;
                            } }

                        @kategoriadi
                    </td>
                    <td><img src="@item.ResimURL" width="100" height="100" /></td>

                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.KatalogId }, new { @class = " btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.KatalogId }, new { @class = " btn btn-danger btn-sm" })
                    </td>
                </tr>}
                </table>
            </div>
        </div>
    </div>
</div>