@model IEnumerable<Kurumsal.Models.Sınıflar.HizmetKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="text-center">
        @if (TempData["DeleteMessage1"] != null)
        {
            <h5 class="alert alert-danger"> @TempData["DeleteMessage1"]</h5>}
        @{ if (TempData["create"] != null)
            {
                <h5 class="alert alert-success"><i class="far fa-check-circle"></i>&nbsp;&nbsp; @TempData["create"]</h5> }
            if (TempData["edit"] != null)
            {
                <h5 class="alert alert-primary"><i class="far fa-edit"></i>&nbsp;&nbsp; @TempData["edit"]</h5> }
            }
    </div>

    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary d-inline">Ürün Kategori Listesi</h6>&nbsp;&nbsp;
            <h5 class="font-weight-bold text-primary d-inline">
                @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
            </h5>
        </div>

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th>
                            Açıklama
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{ string kategoriadi = "";
                                    if (item.HizmetKategoriAdi.Length > 100)
                                    {
                                        kategoriadi = item.HizmetKategoriAdi.Substring(0, 100) + "...";
                                    }
                                    else
                                    {
                                        kategoriadi = @item.HizmetKategoriAdi;
                                    }
                                }

                                @kategoriadi
                            </td>
                            <td>
                                @{ string aciklama = "";
                                    if (item.Aciklama.Length > 100)
                                    {
                                        aciklama = item.Aciklama.Substring(0, 100) + "...";
                                    }
                                    else
                                    {
                                        aciklama = @item.Aciklama;
                                    }
                                }

                                @aciklama
                            </td>
                            <td>
                                @Html.ActionLink("Güncelle", "Edit", new { id = item.HizmetKategoriId }, new { @class = " btn btn-primary btn-sm" })
                                @Html.ActionLink("Sil", "Delete", new { id = item.HizmetKategoriId }, new { @class = " btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>