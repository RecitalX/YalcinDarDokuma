@model IEnumerable<Kurumsal.Models.Sınıflar.AltKategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="text-center">
        @if (TempData["DeleteMessage1"] != null)
        {
            <h5 class="alert alert-danger"> @TempData["DeleteMessage1"]</h5>}
        @{ if (TempData["create"] != null)
            {
                <h5 class="alert alert-success"><i class="far fa-check-circle"></i>&nbsp;&nbsp; @TempData["create"]</h5> }
            if (TempData["edit"] != null)
            {
                <h5 class="alert alert-primary"><i class="far fa-edit"></i>&nbsp;&nbsp; @TempData["edit"]</h5> } }
    </div>

    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary d-inline">Alt Kategori Listesi</h6>&nbsp;&nbsp;
            <h5 class="font-weight-bold text-primary d-inline">
                @Html.ActionLink("Yeni ekle", "Create", null, new { @class = "btn btn-success btn-sm" })
                <a href="/HizmetKategori/Index" class="btn btn-warning btn-sm">Üst Kategoriler</a>

            </h5>
        </div>

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">

                    <tr>
                        <th>
                            Üst kategori
                        </th>
                        <th>
                            Alt Kategori
                        </th>
                        <th>Ayarlar</th>

                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @item.HizmetKategori.HizmetKategoriAdi
                    </td>
                    <td>
                        @item.KategoriAdi
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }, new { @class = " btn btn-primary btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.ID }, new { @class = " btn btn-danger btn-sm" })
                    </td>
                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>