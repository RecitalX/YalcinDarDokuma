@model Kurumsal.Models.Sınıflar.AltKategori
@{ ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<div class="container">
    <h3>Kategori Güncelle</h3>
    <hr />

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group ">
                        <label for="cemail" class="control-label col-lg-2">Üst Kategori <span class="required"></span></label>
                        <div class="col-lg-10">
                            @Html.DropDownList("HizmetKategoriId", null, new { @class = "form-control", placeholder = "Kategori Adı" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="cname" class="control-label col-lg-2">Alt Kategori Adı <span class="required"></span></label>
                        <div class="col-lg-10">
                            <input class="form-control" id="KategoriAdi" maxlength="50" name="KategoriAdi" placeholder="İlişkilendirmek istediğiniz kategori adını giriniz" type="text" required />
                            <input type="hidden" name="KategoriAdi" value="@Model.KategoriAdi" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary btn-sm" type="submit">Ekle</button>
                            <a class="text-white btn btn-danger btn-sm" href="/AltKategori/Index">İptal</a>
                        </div>
                    </div>
                </div>}
</div>