@model Kurumsal.Models.Sınıflar.Slider
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">CKEDITOR.replace('editor')</script>

<div class="container">

    @using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Slider Ekle</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group ">
                <label for="curl" class="control-label col-lg-2">Resim</label>
                <div class="col-lg-10">
                    <input required type="file" name="ResimURL" accept=".jpg,.png,.jpeg" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ekle" class="btn btn-primary btn-sm" />
                    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-danger btn-sm" })
                </div>
            </div>
        </div>
    }
</div>