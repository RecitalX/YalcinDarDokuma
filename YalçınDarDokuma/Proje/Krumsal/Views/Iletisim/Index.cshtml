@model IEnumerable<Kurumsal.Models.Sınıflar.Iletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="text-center mx-4">
        @{ if (TempData["create"] != null)
            {
    <h5 class="alert alert-success"><i class="far fa-check-circle"></i>&nbsp;&nbsp; @TempData["create"]</h5> }
if (TempData["edit"] != null)
{
    <h5 class="alert alert-primary"><i class="far fa-edit"></i>&nbsp;&nbsp; @TempData["edit"]</h5> }
if (TempData["delete"] != null)
{
    <h5 class="alert alert-danger"><i class="far fa-trash-alt"></i>&nbsp;&nbsp; @TempData["delete"]</h5> }}
    </div>
<div class="m-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İletişim</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            Adres
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mail)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Whatsapp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.instagram)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fax)
                        </th>
                        <th>Ayarlar</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.Raw(item.WeChat)
                    </td>
                    <td>
                        @Html.Raw(item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mail)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Whatsapp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.instagram)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.IletisimId }, new { @class = " btn btn-primary btn-sm" })
                    </td>
                </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>