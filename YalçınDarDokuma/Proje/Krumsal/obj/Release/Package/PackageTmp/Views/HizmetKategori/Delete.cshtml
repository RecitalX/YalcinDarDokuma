@model Kurumsal.Models.HizmetKategori

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container">

        <h3>Silmek istediğinize emin misiniz?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Kategori Adı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HizmetKategoriAdi)
                </dd>

                <dt>
                    Açıklama
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Aciklama)
                </dd>

            </dl>

            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-danger" />
                    @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-warning" })
                </div>
            }
        </div>
    </div>