@model IEnumerable<Kurumsal.Models.Iletisim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İletişim</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.WeChat)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Whatsapp)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.instagram)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Fax)
                        </th>
                        <th>Ayarlar</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WeChat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Whatsapp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.instagram)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.IletisimId }, new { @class = " btn btn-primary btn-sm" })
                        @Html.ActionLink("Detay", "Details", new { id = item.IletisimId }, new { @class = " btn btn-warning btn-sm" })
                    </td>
                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
