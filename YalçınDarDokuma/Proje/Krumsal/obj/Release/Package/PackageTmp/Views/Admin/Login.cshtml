@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/Admin Panel/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <title>Giriş - Admin</title>

    @Styles.Render("~/css/login")

    @Scripts.Render("~/script/login")

    <style>
        body {
            position: relative;
            min-height: 100%;
        }
    </style>

</head>
<body class="bg-gradient-primary" style="margin-top:10%;">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900">Hoş Geldin!</h1>
                                    </div>
                                    <form class="user" method="post" action="/Admin/Login/">
                                        <div class="text-center">
                                            @if (Session["adminid"] == null)
                                            {
                                                <p class="alert">@ViewBag.Uyari</p>
                                            }
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="Eposta" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" required placeholder="Email Adres">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="Sifre" class="form-control form-control-user" id="exampleInputPassword" required placeholder="Parola">
                                        </div>
                                        <div class="text-center">
                                            <input type="submit" value="Giriş Yap" class="btn btn-primary w-100" />
                                        </div>
                                    </form>
                                    <hr />
                                    <div class="text-center">
                                        <a class="" href="/Admin/SifremiUnuttum/">Şifremi Unuttum</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    @Scripts.Render("~/script/login2")

</body>

</html>



