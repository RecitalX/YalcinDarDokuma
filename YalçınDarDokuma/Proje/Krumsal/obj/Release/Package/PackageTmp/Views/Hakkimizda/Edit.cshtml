@model Kurumsal.Models.Hakkimizda
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">CKEDITOR.replace('editor')</script>


<div class="container">
    <h3>Hakkımızda Bölümünü Güncelle</h3>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.HakkimizdaId)

            <div class="form-group">
                <div class = "control-label col-md-2">Açıklama</div>
                <div class="col-md-10">
                    <textarea name="Aciklama" class="ckeditor">@Model.Aciklama</textarea>
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Güncelle</button>
                    <a class="text-white btn btn-danger" href="/Hakkimizda/Index">İptal</a>
                </div>
            </div>
        </div>
    }
</div>
