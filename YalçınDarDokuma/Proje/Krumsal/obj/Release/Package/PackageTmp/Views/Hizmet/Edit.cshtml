@model Kurumsal.Models.Hizmet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">CKEDITOR.replace('editor')</script>
<div class="container">
    @using (Html.BeginForm("Edit", "Hizmet", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Ürünü Güncelle</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HizmetId)

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" type="text" required value="@Model.Baslik" />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" required name="Icerik">@Model.Icerik</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("HizmetKategoriId", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResimURL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ResimURL" accept=".png,.jpg,.jpeg" />
                @Html.ValidationMessageFor(model => model.ResimURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Ürün Kodu <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UrunKodu" name="UrunKodu" type="text" required value="@Model.UrunKodu" />
            </div>
        </div>

        <div class="col-lg-10 my-2">
            <div class="" style="border-left: 4px solid #4e73df; padding-left: 10px;  display: inline-block;">
                <i class="fas fa-crop-alt"></i><span style="color:#4e73df; padding-left: 5px;">
                    Eski
                    Renkler :
                </span>
            </div>
            @foreach (var renk in Model.Renk.ToList())
            {
                <h5 style="display: inline-block;"><span class="badge badge-warning text-white">@renk.RenkAdi</span></h5>
            }
        </div>

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Renk <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Renk" name="Renk" required type="text" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-danger" })

            </div>
        </div>
    </div>
    }
</div>

