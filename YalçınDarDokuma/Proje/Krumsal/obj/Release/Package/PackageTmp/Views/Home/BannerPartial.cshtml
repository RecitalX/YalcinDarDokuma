@model IEnumerable<Kurumsal.Models.Banner>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div class="general" style="background-color:white;">
        <div class="avds">
            <div class="avds_container d-flex flex-lg-row flex-column align-items-start justify-content-between">

                <div class="avds_largex">
                    <div class="avds_background" style="background-image: url('@item.ResimURL1');"></div>
                    <div class="avds_large_container">
                        <div class="avds_large_content">
                            <div class="avds_title">@Html.Raw(item.Banner1)</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="avds">
        <div class="avds_container d-flex flex-lg-row flex-column align-items-start justify-content-between">
            <div class="avds_small">
                <div class="avds_background" style="background-image:url('@item.ResimURL2')"></div>
                <div class="avds_small_inner">
                    <div class="avds_small_content">
                        <div class="avds_title"> @Html.Raw(item.Banner2)</div>
                    </div>
                </div>
            </div>
            <div class="avds_large">
                <div class="avds_background" style="background-image:url('@item.ResimURL3')"></div>
                <div class="avds_large_container">
                    <div class="avds_large_content">
                        <div class="avds_title">@Html.Raw(item.Banner3)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}